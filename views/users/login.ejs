<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="usename">Username</label>
                <input class="form-control" type="text" id="username" name="username" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <button class="btn btn-success mb-3">Login</button>
            <p>
                <a href="/campgrounds">Back to All Campgrounds</a>
            </p>
        </form>
    </div>
</div>