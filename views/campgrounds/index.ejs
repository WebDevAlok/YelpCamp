<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px;"></div>
<h1>All Campgrounds</h1>
<div class="mb-3">
    <a class="btn btn-success" href="/campgrounds/new">Create a new Campground</a>
</div>
<% for( let campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= campground.images[0].url %>" alt="" class="img-fluid">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p>
                    <small class="text-muted"><%= campground.location.name %></small>
                </p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %> 
<h2>You are Welcome!</h2>
